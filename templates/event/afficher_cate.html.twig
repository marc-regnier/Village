{% extends 'base.html.twig' %}

{% block title %}{{categories.libelle}}{% endblock %}



{% block monTitre %}{{categories.libelle}}{% endblock %}



{% block body %}
<div class="container">
<div class="row">
    {% for information in categories.information %}
    <div class="col-6 mb-4">
        <div class="row align-items-center">
            <div class="card">
                <img class="card-img-top" src="{{vich_uploader_asset(information,'imageFile')|imagine_filter('thumb')}}" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title">{{information.titre}}</h5>
                  <p class="card-text text-truncate">{{ information.libelle }}</p>
                  <p><a href="{{path('afficher_info', {'id' : information.id})}}">En savoir plus</a></p>
                </div>
              </div>
        </div>
    </div>
    {% endfor %}
    </div>
  </div>
{% endblock %}